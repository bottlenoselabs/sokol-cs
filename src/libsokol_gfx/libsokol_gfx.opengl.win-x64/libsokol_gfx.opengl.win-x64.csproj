<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace />
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <Description>Sokol.NET; this specific package includes the `sokol_gfx` OpenGL native shared libraries for Windows.</Description>
        <Authors>Lucas Girouard-Stranks</Authors>
        <RootNamespace />
        <Copyright>Copyright Â© 2020 Lucas Girouard-Stranks</Copyright>
        <License>MIT</License>
        <PackageProjectUrl>https://github.com/lithiumtoast/sokol.net</PackageProjectUrl>
        <RepositoryUrl>https://github.com/lithiumtoast/sokol.net</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>sokol sokol_gfx c# csharp dotnet .net</PackageTags>
        <IsPackable>true</IsPackable>
        <IncludeSymbols>false</IncludeSymbols>
        <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Debug' ">
        <Content Include="..\..\..\lib\libsokol_gfx\win-x64\opengl\debug\sokol_gfx.dll">
            <Link>runtimes/win-x64/native/sokol_gfx-opengl.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/win-x64/native/sokol_gfx-opengl.dll</PackagePath>
        </Content>
        <Content Include="..\..\..\lib\libsokol_gfx\win-x64\opengl\debug\sokol_gfx.pdb">
            <Link>runtimes/win-x64/native/sokol_gfx-opengl.pdb</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/win-x64/native/sokol_gfx-opengl.pdb</PackagePath>
        </Content>
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)' == 'Release' ">
        <Content Include="..\..\..\lib\libsokol_gfx\win-x64\opengl\release\sokol_gfx.dll">
            <Link>runtimes/win-x64/native/sokol_gfx-opengl.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <PackagePath>runtimes/win-x64/native/sokol_gfx-opengl.dll</PackagePath>
        </Content>
    </ItemGroup>

</Project>
