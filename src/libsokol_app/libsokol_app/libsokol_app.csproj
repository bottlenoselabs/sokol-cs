<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <RootNamespace />
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
        <Description>Sokol.NET; this specific package includes the `sokol_app` native shared libraries.</Description>
        <Authors>Lucas Girouard-Stranks</Authors>
        <RootNamespace />
        <Copyright>Copyright Â© 2020 Lucas Girouard-Stranks</Copyright>
        <License>MIT</License>
        <PackageProjectUrl>https://github.com/lithiumtoast/sokol.net</PackageProjectUrl>
        <RepositoryUrl>https://github.com/lithiumtoast/sokol.net</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>sokol sokol_gfx c# csharp dotnet .net</PackageTags>
        <IsPackable>true</IsPackable>
        <IncludeSymbols>false</IncludeSymbols>
        <RuntimeIdentifiers>win-x64;osx-x64;linux-x64</RuntimeIdentifiers>
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\libsokol_app.d3d11.win-x64\libsokol_app.d3d11.win-x64.csproj" />
      <ProjectReference Include="..\libsokol_app.metal.osx-x64\libsokol_app.metal.osx-x64.csproj" />
      <ProjectReference Include="..\libsokol_app.opengl.linux-x64\libsokol_app.opengl.linux-x64.csproj" />
      <ProjectReference Include="..\libsokol_app.opengl.osx-x64\libsokol_app.opengl.osx-x64.csproj" />
      <ProjectReference Include="..\libsokol_app.opengl.win-x64\libsokol_app.opengl.win-x64.csproj" />
    </ItemGroup>
    
</Project>
